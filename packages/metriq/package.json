{
  "name": "metriq",
  "version": "0.1.0",
  "description": "A TypeScript metrics collection and reporting library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup --tsconfig ./tsconfig.build.json",
    "dev": "tsup --watch --tsconfig ./tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:types": "tsc --noEmit",
    "lint": "eslint src",
    "bench": "vitest bench",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "metrics",
    "monitoring",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.1",
    "dedent": "^1.5.3",
    "prom-client": "^15.1.3",
    "tsup": "^8.3.5"
  }
}
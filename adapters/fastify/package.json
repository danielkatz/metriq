{
  "name": "@metriq/fastify",
  "version": "0.2.2",
  "description": "Fastify adapter for Metriq - high-performance TypeScript metrics collection library",
  "author": "Daniel Katz",
  "license": "MIT",
  "keywords": [
    "monitoring",
    "prometheus",
    "metrics",
    "nodejs",
    "fast",
    "scalable",
    "fastify"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup --tsconfig ./tsconfig.build.json",
    "dev": "tsup --watch --tsconfig ./tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:types": "tsc --noEmit",
    "lint": "eslint src",
    "bench": "vitest bench",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "metriq": "^0.2.2"
  },
  "peerDependencies": {
    "fastify": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "fastify": "^5.2.1",
    "supertest": "^7.0.0",
    "tsup": "^8.3.5"
  }
}